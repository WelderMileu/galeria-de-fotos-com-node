<!DOCTYPE html>
<html leng="pt-br">
	<head>
		<meta charset="utf-8">
		<title>Pagina Inicial</title>
		<%- include('src/links') %>
	</head>
	<body>
		<div class="container">
			<div class="mt-5">
				<div class="card col-lg-5 m-auto">
					<div class="m-auto">
						<div class="mt-3 mb-5">
							<h2 class="text-roboto">Sistema de Loguin</h2>
						</div>
						<form class="form" action="/cadastrar">
							<div class="input-group">
								<div class="input-group-prepend">
									<span class="input-group-text">
										<i class="fa fa-user-o"></i>
									</span>
									<input type="text" name="" class="form-control" 
									placeholder="Usuario">
								</div>
							</div>
							<div class="input-group mt-3">
								<div class="input-group-prepend">
									<span class="input-group-text">
										<i class="fa fa-warning"></i>
									</span>
									<input type="password" name="" class="form-control" 
									placeholder="*****">
								</div>
							</div>
							<div class="mt-3 mb-3">
								<button type="submit" class="btn btn-dark">
									<i class="fa fa-repeat"></i>
										Loguar
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
			<div class="mt-5">
				<h4>Acesso ao Loguin</h4>
				<p>
					Usuario: null
				</p>
				<p>
					Senha: null
				</p>
			</div>
		</div>
	</body>
</html>